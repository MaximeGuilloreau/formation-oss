{% extends 'base.html.twig' %}

{% block body %}
    <h1>Address creation</h1>

    {{ form_start(form) }}
        <div class="form-group" >
            {{ form_errors(form.number) }}
            {{ form_label(form.number) }}
            {{ form_widget(form.number, { attr: { class: 'form-control' }}) }}
        </div>
        <div class="form-group" >
            {{ form_errors(form.street) }}
            {{ form_label(form.street) }}
            {{ form_widget(form.street, { attr: { class: 'form-control' }}) }}
        </div>
        <div class="form-group" >
            {{ form_errors(form.city) }}
            {{ form_label(form.city) }}
            {{ form_widget(form.city, { attr: { class: 'form-control' }}) }}
        </div>
        <div class="form-group" >
            {{ form_errors(form.zipcode) }}
            {{ form_label(form.zipcode) }}
            {{ form_widget(form.zipcode, { attr: { class: 'form-control' }}) }}
        </div>
        <input class="btn btn-primary"  type="submit" value="Create" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('address_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
