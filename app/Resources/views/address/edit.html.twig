{% extends 'base.html.twig' %}

{% block body %}
    <h1>Address edit</h1>

    {{ form_start(edit_form) }}
        <div class="form-group" >
            {{ form_errors(edit_form.number) }}
            {{ form_label(edit_form.number) }}
            {{ form_widget(edit_form.number, { attr: { class: 'form-control' }}) }}
        </div>
        <div class="form-group" >
            {{ form_errors(edit_form.street) }}
            {{ form_label(edit_form.street) }}
            {{ form_widget(edit_form.street, { attr: { class: 'form-control' }}) }}
        </div>
        <div class="form-group" >
            {{ form_errors(edit_form.city) }}
            {{ form_label(edit_form.city) }}
            {{ form_widget(edit_form.city, { attr: { class: 'form-control' }}) }}
        </div>
        <div class="form-group" >
            {{ form_errors(edit_form.zipcode) }}
            {{ form_label(edit_form.zipcode) }}
            {{ form_widget(edit_form.zipcode, { attr: { class: 'form-control' }}) }}
        </div>
        <input class="btn btn-primary"  type="submit" value="Edit" />
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('address_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
