{% extends 'base.html.twig' %}

{% block body %}
    <h2>
        {{ 'job.new.title' | trans }}
    </h2>
    {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
    <div class="form-group" >
        {{ form_errors(form.title) }}
        {{ form_label(form.title, 'job.title.label' | trans) }}
        {{ form_widget(form.title, { attr: { class: 'form-control' } }) }}
    </div>
    <div class="form-group" >
        {{ form_errors(form.description) }}
        {{ form_label(form.description, 'job.description.label' | trans) }}
        {{ form_widget(form.description, { attr: { class: 'form-control' } }) }}
    </div>
    <div class="form-group" >
        {{ form_errors(form.category) }}
        {{ form_label(form.category, 'job.category.label' | trans) }}
        {{ form_widget(form.category, { attr: { class: 'form-control' } }) }}
    </div>
    <div class="form-group" >
        {{ form_errors(form.company) }}
        {{ form_label(form.company, 'job.company.label' | trans) }}
        {{ form_widget(form.company, { attr: { class: 'form-control' } }) }}
    </div>

    <button class="btn btn-primary" type="submit" >{{ 'job.create.label' | trans }}</button>
    {{ form_end(form) }}

    <ul>
        <li>
            <a class="btn" href="{{ path('job_index') }}" >{{ 'back_to_list' | trans }}</a>
        </li>
    </ul>
{% endblock %}
