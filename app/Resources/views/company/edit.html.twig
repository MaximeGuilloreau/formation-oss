{% extends 'base.html.twig' %}

{% block body %}
    <h1>Company edit</h1>

    {{ form_start(edit_form) }}
        <div class="form-group" >
            {{ form_errors(edit_form.name) }}
            {{ form_label(edit_form.name) }}
            {{ form_widget(edit_form.name, { attr: { class: 'form-control' } }) }}
        </div>

        <div class="form-group" >
            {{ form_errors(edit_form.addresses) }}
            {{ form_label(edit_form.addresses) }}
            {{ form_widget(edit_form.addresses, { attr: { class: 'form-control' } }) }}
        </div>
        <input class="btn btn-primary"  type="submit" value="Edit" />
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('company_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
